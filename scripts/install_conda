if [ ! -d "$HOME/miniconda3" ]; then
    curl -L -o $HOME/conda.sh https://github.com/conda-forge/miniforge/releases/latest/download/Miniforge3-Linux-x86_64.sh
    mkdir $HOME/tmpconda
    TMPDIR=$HOME/tmpconda bash conda.sh -b -p $HOME/miniconda3
    source ~/.bashrc

    rm $HOME/conda.sh
    rm -r $HOME/tmpconda
fi

conda update -y conda
# deactivate conda on startup
# https://stackoverflow.com/a/58045984
conda config --set auto_activate_base false

mamba create -y -n snakemake snakemake
